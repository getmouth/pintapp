

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-signin">
    <h3 class="form-signin-heading">Forgot your password?</h3>
    <%= f.label :email,class:"sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %><br /><br />

    <div class="actions">
      <%= f.submit "Reset Password",class:"btn btn-lg btn-primary btn-block"  %>
    </div>
    <% end %>

    
</div>