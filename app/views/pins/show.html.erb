

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-body">
				<p><%=image_tag(@pin.image.url,width:'100%') %></p> 
			
			
				
				<%= @pin.description %><br />
			<p>By: <%= @pin.user.name if @pin.user %></p>
			</div>

			<div class="panel-footer">
				<%if @pin.user== current_user %>
				<%= link_to 'Delete', @pin, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
				<%= link_to 'Edit', edit_pin_path(@pin), class:'btn btn-primary' %> 
				<% end %>
				<%= link_to 'Back', pins_path, class:'btn btn-primary' %>
			</div>
		</div>
	</div>
</div>